# terminal emulator
super + shift + Return
	$TERMINAL

# mail reader
super + shift + m
	$TERMINAL -e neomutt

# browser
super + shift + b
	$BROWSER

# rss reader
super + shift + n
	$TERMINAL -e newsboat

# volume
XF86AudioMute
	pamixer -t;

XF86Audio{Raise,Lower}Volume
	[ $(pamixer --get-mute) = false ] && pamixer {-i,-d} 1

# password manager
super + shift + p
	$PASSWORD_MANAGER

# locker
super + ctrl + a
	$LOCKER

# take screenshot
Print
	scrot

# xkill
super + x
	xkill

# window spawner
super + p
	dmenu_run
