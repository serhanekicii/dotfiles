# terminal emulator
super + shift + Return
	$TERMINAL

# mail reader
super + shift + m
	$TERMINAL -e neomutt

# browser
super + shift + b
	$BROWSER

# rss reader
super + shift + n
	$TERMINAL -e newsboat

# password manager
super + shift + p
	echo $DMENU_PARAMS | xargs $PASSWORD_MANAGER

# locker
super + ctrl + a
	$LOCKER

# take screenshot
Print
	scrot

# xkill
super + x
	xkill

# window spawner
super + p
	echo $DMENU_PARAMS | xargs dmenu_run
